{
    "name": "drjele/symfony-json-form",
    "type": "symfony-bundle",
    "description": "Forms that serialize to json for frontend frameworks with symfony api backends",
    "keywords": [
        "symfony",
        "json",
        "form"
    ],
    "homepage": "https://gitlab.com/drjele-symfony/json-form",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Jeledintan",
            "email": "adrian.jeledintan@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/http-foundation": "^4.0|^5.0|^6.0|^7.0",
        "symfony/serializer": "^4.0|^5.0|^6.0|^7.0",
        "symfony/translation-contracts": "^3.4"
    },
    "require-dev": {
        "drjele/symfony-phpunit": "^5.1",
        "friendsofphp/php-cs-fixer": "^3.42",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "symfony/property-access": "^4.0|^5.0|^6.0|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Drjele\\Symfony\\JsonForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drjele\\Symfony\\JsonForm\\Test\\": "tests/"
        }
    },
    "scripts": {
        "install-hooks": [
            "[ $COMPOSER_DEV_MODE -eq 1 ] && rm -rf .git/hooks && ln -s ../dev/git-hooks .git/hooks || exit 0"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
